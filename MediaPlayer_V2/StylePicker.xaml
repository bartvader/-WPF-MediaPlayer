<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MediaPlayer_V2.StylePicker"
	x:Name="Window"
	Title="StylePicker"
	Width="300" Height="300">

	<Grid x:Name="LayoutRoot">
        <ListBox x:Name="style_list" Margin="0,0,0,42">
            <ListBoxItem Content="mainstyle.xaml"/>
            <ListBoxItem Content="green_style.xaml"/>
            <ListBoxItem Content="purple_style.xaml" />
        </ListBox>
        <Button Click="apply_style_Click" x:Name="apply_style" Content="ОК" HorizontalAlignment="Left" Height="30" Margin="8,0,0,8" VerticalAlignment="Bottom" Width="68"/>
		<Button Click="cancel_Click" x:Name="cancel" Content="Cancel" Height="30" Margin="80,0,136,8" VerticalAlignment="Bottom"/>
    </Grid>
</Window>